{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "targetArchitecture": "x86",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "preLaunchTask": "g++",
            "internalConsoleOptions":"neverOpen",
            "setupCommands": [
                {
                    "description": "gdbinit",
                    "text": "python import sys;sys.path.insert(0, 'C:/C++Compiler/MinGW/GCC-9.2.0/mingw64/share/gcc-9.2.0/python');from libstdcxx.v6.printers import register_libstdcxx_printers;register_libstdcxx_printers (None)",
                    "ignoreFailures": false
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "handle SIGPIPE nostop noprint pass",
                    "description": "ignore SIGPIPE",
                    "ignoreFailures": true
                }
            ],
            // "logging": {
            //     "moduleLoad": false,
            //     "trace": true,
            //     "engineLogging": true,
            //     "exceptions": true
            //     // "traceResponse": true
            //  }
        },
        {
            "type": "java",
            "name": "Java Launch",
            "request": "launch",
            "mainClass": "",
            "cwd":"${fileDirname}",
            "console":"integratedTerminal",
            "internalConsoleOptions": "neverOpen",
        }        
    ]
}