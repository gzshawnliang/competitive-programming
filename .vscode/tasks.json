{
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [
        "/c",
        "chcp 65001"
    ],
    "tasks": [{
            "taskName": "rebuild python",
            "command": "python",
            "args": ["${file}"],
            "showOutput": "always",
            "options": {
                "env": {
                    "PYTHONIOENCODING": "UTF-8"
                }
            },
            "isShellCommand": true
        },
        {
            "taskName": "g++",
            "command": "g++.exe",
            "args": [
                "-g",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lpsapi",
                "-std=gnu++11",
                "-DDEBUG",
                "-I",
                "${workspaceFolder}\\include"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "isShellCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "build",
            "suppressTaskName": true,
            "command": "g++.exe",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lpsapi",
                "-I",
                "${workspaceFolder}\\include",
                "-std=gnu++11"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "run",
            "suppressTaskName": true,
            "command": "C:\\cygwin64\\bin\\time.exe",
            "args": [
                "-f",
                "\"Process exited after %e seconds\"",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            //vscode输出窗口不强制显示英文提示，可能错误出现乱码
            "taskName": "rebuild and run(local) chs",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndTest.ps1",
                "-SourceFileName",
                "'${fileDirname}\\${fileBasenameNoExtension}.cpp'",
                "-CompilerArgs",
                "\"-std=gnu++11 -O2 -lm -I ${workspaceFolder}\\include\"",
                "-WorkspaceFolder",
                "\"${workspaceFolder}\""
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            //vscode输出窗口强制显示英文提示，否则出现乱码
            "taskName": "rebuild and run(local)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-Command",
                "\"[Threading.Thread]::CurrentThread.CurrentUICulture = 'en-US';$ErrorView='CategoryView';&${workspaceFolder}\\BuildAndTest.ps1 -SourceFileName '${fileDirname}\\${fileBasenameNoExtension}.cpp' -CompilerArgs '-std=gnu++11 -O2 -Wall -lm -I ${workspaceFolder}\\include' -WorkspaceFolder '${workspaceFolder}'\"",
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always",
        },  
        {
            //DevC++弹出输出窗口
            "taskName": "rebuild and run(DevCppMode)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-Command",
                "\"[Threading.Thread]::CurrentThread.CurrentUICulture = 'en-US';$ErrorView='CategoryView';&${workspaceFolder}\\BuildAndTest.ps1 -SourceFileName '${fileDirname}\\${fileBasenameNoExtension}.cpp' -CompilerArgs '-std=gnu++11 -O2 -Wall -lm -I ${workspaceFolder}\\include' -DevCppMode -WorkspaceFolder '${workspaceFolder}'\"",
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always",
        },            
        {
            "taskName": "rebuild and run(onlinejudge)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndTest.ps1",
                "-SourceFileName",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-RedirectStdInOut",
                "-CompilerArgs",
                "\"-std=gnu++11 -O2 -lm -I ${workspaceFolder}\\include\"",
                "-WorkspaceFolder",
                "\"${workspaceFolder}\""
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            // vscode输出窗口强制显示英文提示，否则出现乱码
            "taskName": "rebuild and run(java)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-Command",
                "\"[Threading.Thread]::CurrentThread.CurrentUICulture = 'en-US';&${workspaceFolder}\\BuildAndTest.ps1 -SourceFileName ${fileDirname}\\${fileBasenameNoExtension}.java -ShowShellConsole -WorkspaceFolder \"${workspaceFolder}\" \""
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "rebuild and run(java2)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndTest.ps1",
                "-SourceFileName",
                "${fileDirname}\\${fileBasenameNoExtension}.java",
                "-ShowShellConsole"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },

        {
            "taskName": "rebuild and test(multi files)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndTest.ps1",
                "-SourceFileName",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-DoTest",
                "-CompilerArgs",
                "-std=gnu++11 -O2 -lm -DONLINE_JUDGE -DCODE_STATISTICS -I ${workspaceFolder}\\include"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "Compare output files",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\CompareMultilFiles.ps1",
                "-InitialDirectory",
                "${fileDirname}"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        }
    ]
}