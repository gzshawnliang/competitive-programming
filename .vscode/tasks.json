{
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [
        "/c",
        "chcp 65001"
    ],    
    "tasks": [
        {
            "taskName": "rebuild python",
            "command": "python",
            "args": ["${file}"],
            "showOutput": "always",
            "options": {
                "env":{
                    "PYTHONIOENCODING": "UTF-8"
                  }
              },
            "isShellCommand": true
        },        
        {
            "taskName": "g++",
            "command": "${env:CppCompiler}\\g++.exe",
            "args": [
                "-g",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lpsapi",
                "-std=gnu++11",
                "-DDEBUG",
                "-I",
                "${workspaceFolder}\\include"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "isShellCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "build",
            "suppressTaskName": true,
            "command": "${env:CppCompiler}\\g++.exe",
            "args": [
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lpsapi",
                "-I",
                "${workspaceFolder}\\include",
                "-std=gnu++11"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },        
        {
            "taskName": "run",
            "suppressTaskName": true,
            "command": "C:\\cygwin64\\bin\\time.exe",
            "args": [
                "-f",
                "\"Process exited after %e seconds\"",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput":"always"
        },
        {
            "taskName": "rebuild and run(local)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndTest.ps1",
                "-SourceFileName",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-CompilerArgs",            
                "-std=gnu++11 -O2 -lm -I ${workspaceFolder}\\include"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "rebuild and run(onlinejudge)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndRun.ps1",
                "-SourceFileName",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-ShowShellConsole",
                "-CompilerArgs",                        
                "-std=gnu++11 -O2 -lm -DONLINE_JUDGE -DCODE_STATISTICS -I ${workspaceFolder}\\include"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        }, 
        {
            "taskName": "rebuild and run(java)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndTest.ps1",
                "-SourceFileName",
                "${fileDirname}\\${fileBasenameNoExtension}.java",
                "-ShowShellConsole"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },               
        {
            "taskName": "rebuild and test(multi files)",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\BuildAndTest.ps1",
                "-SourceFileName",
                "${fileDirname}\\${fileBasenameNoExtension}.cpp",
                "-DoTest",
                "-CompilerArgs",        
                "-std=gnu++11 -O2 -lm -DONLINE_JUDGE -DCODE_STATISTICS -I ${workspaceFolder}\\include"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "Compare output files",
            "suppressTaskName": true,
            "command": "powershell",
            "args": [
                "-executionpolicy",
                "bypass",
                "-File",
                "${workspaceFolder}\\CompareMultilFiles.ps1",
                "-InitialDirectory",
                "${fileDirname}"
            ],
            "isShellCommand": true,
            "isBuildCommand": true,
            "echoCommand": true,
            "showOutput": "always"
        }        
    ]
}